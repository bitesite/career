<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Description</th>
      <th>Status</th>
      <th>Started at</th>
      <th>Completed at</th>
      <th>% complete</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.started_at %></td>
        <td><%= task.completed_at %></td>
        <td><%= task.percent_complete %></td>
        <td><%= link_to 'View', task %></td>
      </tr>
    <% end %>    
  </tbody>
</table>